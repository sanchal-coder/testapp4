
<div class="max-w-md mx-auto bg-white shadow-md rounded-lg overflow-hidden">
  <div class="p-6">
    <%= render @patient %>
  </div>
  <div class="flex justify-between p-4 bg-gray-100 space-x-4">
    <%= link_to "Edit ", edit_patient_path(@patient), class: "text-white bg-yellow-600 hover:bg-gray-800 px-4 py-2 rounded" %>
    <%= link_to "Back ", patients_path, class: "text-white bg-blue-600 text-red-200 hover:bg-blue-800 px-4 py-2 rounded" %>
    <%= button_to "Delete", @patient, method: :delete, class: "text-white bg-red-600 hover:bg-gray-800 px-4 py-2 rounded" %>
  </div>
</div>
